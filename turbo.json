{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "prepare-env": {
      "cache": false,
      "outputs": [".env"],
      "env": ["CREDENTIAL_NAME", "CREDENTIAL_PW", "ALGOHUB_STAGE"]
    },
    "build": {
      "dependsOn": ["^build", "prepare-env"],
      "inputs": ["$TURBO_DEFAULT$", ".env", ".env.local"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^typecheck"]
    },
    "lint:check": {
      "dependsOn": ["^typecheck"]
    },
    "format": {
      "dependsOn": ["^typecheck"]
    },
    "format:check": {
      "dependsOn": ["^typecheck"]
    },
    "dev": {
      "dependsOn": ["prepare-env"],
      "persistent": true,
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["^typecheck"]
    },
    "check": {
      "dependsOn": ["^check"]
    }
  }
}

