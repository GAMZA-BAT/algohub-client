{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
      "build": {
        "dependsOn": ["^build"],
        "inputs": ["$TURBO_DEFAULT$", ".env", ".env.local"],
        "outputs": [".next/**", "!.next/cache/**"]
      },
      "lint": {
        "dependsOn": ["^typecheck"]
      },
      "lint:check": {
        "dependsOn": ["^typecheck"]
      },
      "format": {
        "dependsOn": ["^typecheck"]
      },
      "format:check": {
        "dependsOn": ["^typecheck"]
      },
      "dev": {
        "persistent": true,
        "cache": false
      },
      "typecheck": {
        "dependsOn": ["^typecheck"]
      }
    }
  }
